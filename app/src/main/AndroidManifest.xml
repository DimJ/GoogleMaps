<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.googlemaps">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="Google Maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".attributes.AllAttributesActivity"
            android:label="All Attributes">
        </activity>

        <activity
            android:name=".attributes.NewAttributeActivity"
            android:label="All Attributes">
        </activity>

        <activity
            android:name=".attributes.ChangeAttributeActivity"
            android:label="Change Attribute">
        </activity>

        <activity
            android:name=".employees.AllEmployeesActivity"
            android:label="All Employees">
        </activity>

        <activity
            android:name=".employees.NewEmployeeActivity"
            android:label="New Employee">
        </activity>

        <activity
            android:name=".employees.ChangeEmployeeActivity"
            android:label="Update Employee">
        </activity>

        <activity
            android:name=".maps.SearchActivity"
            android:label="Search">
        </activity>

        <activity
            android:name=".maps.MapsActivity"
            android:label="@string/title_activity_maps">
        </activity>

    </application>

</manifest>